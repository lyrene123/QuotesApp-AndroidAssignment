<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textmain_style.categorytxt_style">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="textmain_style.categorytitle_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">40dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="textmain_style.categorysubtitle_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">22dp</item>
    </style>


    <style name="textmain_style">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textmain_style.quoteStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="textmain_style.quoteStyle.quoteLbl">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

</resources>
