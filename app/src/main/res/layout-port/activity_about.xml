<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/about_header"
        style="@style/textmain_style.categorytitle_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/about_body"
            style="@style/textmain_style.quoteStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_body" />
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/about"/>

    <TextView
        style="@style/textmain_style.quoteStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:text="@string/about_authors"/>

</LinearLayout>