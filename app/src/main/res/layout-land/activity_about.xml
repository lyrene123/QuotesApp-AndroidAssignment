<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/about_header"
        style="@style/textmain_style.categorytitle_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_header" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/about_body"
                style="@style/textmain_style.quoteStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_body" />
        </ScrollView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:scaleType="fitCenter"
                android:src="@drawable/about"/>

            <TextView
                style="@style/textmain_style.quoteStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="@string/about_authors"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>